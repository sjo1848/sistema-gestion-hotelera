// --- MODELOS DEL HOTEL ---

enum RoomStatus {
  AVAILABLE
  OCCUPIED
  DIRTY
  MAINTENANCE
}

model Room {
  id        String     @id @default(uuid())
  number    String     @unique
  type      String
  status    RoomStatus @default(AVAILABLE)
  price     Decimal
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String
  role     String @default("RECEPTIONIST")
}
