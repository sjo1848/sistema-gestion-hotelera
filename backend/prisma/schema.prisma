generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoomStatus {
  AVAILABLE
  OCCUPIED
  DIRTY
  MAINTENANCE
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  name     String
  role     String @default("RECEPTIONIST")
  refreshToken String?
}

model Room {
  id        String     @id @default(cuid())
  number    String     @unique
  type      String
  status    RoomStatus @default(AVAILABLE)
  price     Decimal
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  stays     Stay[]
}

model Stay {
  id         String    @id @default(cuid())
  roomId     String
  guestName  String
  checkInAt  DateTime  @default(now())
  checkOutAt DateTime?

  room       Room      @relation(fields: [roomId], references: [id])

  createdAt  DateTime  @default(now())

  @@index([roomId])
  @@index([checkInAt])
}
