// --- MODELOS DEL HOTEL ---

enum RoomStatus {
  AVAILABLE
  OCCUPIED
  DIRTY
  MAINTENANCE
}

model Room {
  id        String     @id @default(uuid())
  number    String     @unique
  type      String
  status    RoomStatus @default(AVAILABLE)
  price     Decimal
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // ðŸ”¥ RELACIÃ“N INVERSA (ESTO FALTABA)
  stays     Stay[]
}

model Stay {
  id         String   @id @default(uuid())
  roomId     String
  guestName  String
  checkInAt  DateTime @default(now())
  checkOutAt DateTime?

  room       Room     @relation(fields: [roomId], references: [id])

  createdAt  DateTime @default(now())
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String
  role     String @default("RECEPTIONIST")
}
